# MongoDB Connection
MONGODB_URI=your_mongodb_connection_string

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Cloudinary (Image Upload)
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Gmail Configuration (for Email Sending)
# To get Gmail credentials:
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an App Password at: https://myaccount.google.com/apppasswords
# 3. Use the 16-character password below (spaces will be removed)
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASSWORD=your_16_character_app_password
ADMIN_EMAILS=admin@candourjewelry.com,owner@candourjewelry.com

# Node Environment
NODE_ENV=development

# Backend Port
PORT=5000
